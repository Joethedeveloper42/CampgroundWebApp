<% include ../partials/header %>

  <div class="container">
    <header id="jumb-colour" class="jumbotron">
        <div class="container">
        <h1>Welcome to YelpCamp</h1>
        <p>View our campgrounds from all over the world</p>
          <p>
            <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
          </p>
          </div>
    </header>
    
   <div class="row">
       <div class="col-lg-12">
           <h3>Our most popular campgrounds</h3>
       </div>
   </div>
   
   <div class="row text-center" style="display:flex; flex-wrap: wrap;">
       <% campgrounds.forEach(function(campground){ %>
        <div id="camp-margin" class="col-md-3 col-sm-6">
            <div class="img-thumbnail">
                <img class="img-fluid" src=" <%= campground.image %> ">
                  <div class="caption">
                   <h5> <%= campground.name %> </h5>
                  </div>
                  <p>
                      <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                  </p>
            </div>
        </div>
    <% }); %>
   </div>
   
</div>

<% include ../partials/footer %>